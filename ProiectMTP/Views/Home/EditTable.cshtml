@model List<string>
@{
    var tableName = ViewBag.TableName as string;
}

<h2>üõ†Ô∏è Editare structurƒÉ tabel: @tableName</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Nume coloanƒÉ</th>
            <th>Ac»õiune</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var col in Model)
        {
            <tr>
                <td>@col</td>
                <td>
                    @if (col != "Id")
                    {
                        <form asp-action="DeleteColumn" method="post" style="display:inline;">
                            <input type="hidden" name="tableName" value="@tableName" />
                            <input type="hidden" name="columnName" value="@col" />
                            <button type="submit" class="btn btn-danger btn-sm">»òterge</button>
                        </form>

                        <button class="btn btn-sm btn-secondary" type="button" data-bs-toggle="collapse" data-bs-target="#rename-@col">Redenume»ôte</button>

                        <div class="collapse mt-2" id="rename-@col">
                            <form asp-action="RenameColumn" method="post">
                                <input type="hidden" name="tableName" value="@tableName" />
                                <input type="hidden" name="oldColumnName" value="@col" />

                                <input type="text" name="newColumnName" placeholder="Nume nou" required class="form-control mb-1" />
                                <input type="text" name="newColumnType" placeholder="Tip nou (ex: VARCHAR(100))" required class="form-control mb-1" />

                                <button type="submit" class="btn btn-sm btn-success">SalveazƒÉ</button>
                            </form>
                        </div>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<hr />

<h4>‚ûï AdaugƒÉ coloanƒÉ nouƒÉ</h4>
<form asp-action="AddColumn" method="post">
    <input type="hidden" name="tableName" value="@tableName" />

    <div class="mb-3">
        <label class="form-label">Nume coloanƒÉ:</label>
        <input type="text" name="columnName" class="form-control" required />
    </div>

    <div class="mb-3">
        <label class="form-label">Tip coloanƒÉ:</label>
        <select name="columnType" class="form-select" required>
            <option value="" disabled selected>Alege un tip...</option>
            <option value="INT">INT</option>
            <option value="BIGINT">BIGINT</option>
            <option value="VARCHAR(50)">VARCHAR(50)</option>
            <option value="VARCHAR(100)">VARCHAR(100)</option>
            <option value="TEXT">TEXT</option>
            <option value="DATE">DATE</option>
            <option value="DATETIME">DATETIME</option>
            <option value="DECIMAL(10,2)">DECIMAL(10,2)</option>
            <option value="FLOAT">FLOAT</option>
            <option value="BIT">BIT</option>
            <!-- Extinde cu alte op»õiuni, dacƒÉ e nevoie -->
        </select>
    </div>

    <button type="submit" class="btn btn-primary">AdaugƒÉ coloanƒÉ</button>
    <a asp-action="Index" class="btn btn-secondary">√énapoi</a>
</form>

<a href="/Home/Index" class="btn btn-secondary mt-3">‚è™ √énapoi</a>

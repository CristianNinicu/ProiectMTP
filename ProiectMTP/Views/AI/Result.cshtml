@{
    ViewData["Title"] = "Rezultat AI";
    var generatedSql = ViewBag.GeneratedSql as string ?? "";
    var success      = (bool?)(ViewBag.ExecutionSuccess) ?? false;
    var error        = ViewBag.ExecutionError as string;
}

<div class="container mt-5">
    <h1 class="mb-4">Rezultatul generării AI</h1>

    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <h5 class="card-title">SQL generat de AI:</h5>
            <pre class="bg-light p-3" style="white-space: pre-wrap; word-break: break-all;">@generatedSql</pre>
        </div>
    </div>

    @if (success)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            Comanda SQL a fost executată cu succes în baza de date!
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    else
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            A apărut o eroare la executarea comenzii SQL:
            <pre class="bg-light p-2" style="white-space: pre-wrap; word-break: break-all;">@error</pre>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="mt-4">
        <a asp-action="Index" class="btn btn-primary">
            <i class="bi bi-lightbulb-fill"></i> Încearcă din nou
        </a>
        <a asp-controller="Home" asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-house-fill"></i> Homepage
        </a>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+AMvyMiZ6Y/1MxF3Wlm0y6UOm5XQ/"
            crossorigin="anonymous"></script>
}